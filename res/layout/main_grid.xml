<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/partyls_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="파티이름"
        android:textColor="#494444"
        android:textSize="13sp" />

    <RelativeLayout
        android:id="@+id/gridbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border3" >

        <ImageView
            android:id="@+id/partyls_pic"
            android:layout_width="132dp"
            android:layout_height="100dp"
            android:layout_marginLeft="0.8dp"
            android:layout_marginRight="0.8dp"
            android:layout_marginTop="0.8dp"
            android:background="@drawable/border3"
            android:scaleType="centerCrop"
            android:src="@drawable/arrow" />
    </RelativeLayout>

    <TextView
        android:id="@+id/partyls_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gridbox"
        android:layout_marginRight="0.8dp"
        android:layout_marginTop="-2dp"
        android:background="@drawable/border2"
        android:gravity="center_horizontal"
        android:padding="3dp"
        android:singleLine="true"
        android:textColor="#66655E"
        android:textSize="14sp" />

</RelativeLayout>