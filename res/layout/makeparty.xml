<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_writearticle" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="새로운 파티 만들기"
                android:textColor="#6B6666"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_make"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_ok2"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:text="생성하기"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:scaleType="fitXY"
            android:src="#8C8C8C" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_write"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:padding="8dp"
            android:text="새로 만들 파티이름을 적어주세요."
            android:textColor="#88000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/writeName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/btn_write_selected"
            android:gravity="left|top"
            android:hint="파티이름..."
            android:padding="8dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="10dp"
            android:padding="8dp"
            android:text="파티에 초대할 친구들를 선택해 주세요."
            android:textColor="#88000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/friendlist1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_write_selected"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:dividerHeight="0dp"
            android:scrollbars="vertical" >
        </ListView>
    </LinearLayout>

</RelativeLayout>